=include_gon

- @other_periods.each do |period|
  .container-fluid
    .row
      .col-xs-2
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            #{period.number}º Período
            %b.caret
          %ul.dropdown-menu
            %li
              %a{href: "#", "data-target" => "#SubjectModalForm", "data-toggle" => "modal"} Adicionar disciplina
            %li.divider
            %li
              %a{href: "#", "data-target" => "#EditPeriodModalForm", "data-toggle" => "modal"} Editar
            %li.divider
            %li= link_to 'Deletar', period, method: :delete, data: { confirm: 'Tem certeza que deseja deletar o período?' }
  %br
  -if period.subjects.count >= 1
    = render partial: 'periods/subjectstable', locals: { period: period }
  -else
    %p= 'Este periodo nao possui disciplinas'
