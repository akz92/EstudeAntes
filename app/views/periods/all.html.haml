.row-fluid
  .span12
    - if @other_periods.count > 0
      .span6
        %br
        %table.table.table-striped.table_border
          %thead.grey
            %tr
              %td= 'Outros períodos'
              %td= 'Média'
          %tbody
            %tr
            - @other_periods.each do |period|
              - unless period.is_current
                %tr
                  %td
                    .span4
                      = link_to "#{period.number}º Período", period_subjects_path(period)
                  %td
                    .span2
                      = "#{trim(period.mean)}/100"
                    .span10
                      .dropdown.align-right
                        %a.btn.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                          %b.caret
                        %ul.dropdown-menu
                          %li= link_to ' Editar', edit_period_path(period), class: "icon-pencil icon-white"
                          %li.divider
                          %Li= link_to ' Deletar', period, method: :delete, data: { confirm: 'Tem certeza que deseja deletar o período?' }, class: "icon-trash icon-white"
%br
= link_to "Novo perído", new_period_path, class: "btn btn-small"
