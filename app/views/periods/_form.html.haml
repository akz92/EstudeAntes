= bootstrap_form_for @period do |f|
  - if @period.errors.any?
    #error_explanation
      %h2= "#{pluralize(@period.errors.count, "error")} prohibited this period from being saved:"
      %ul
        - @period.errors.full_messages.each do |msg|
          %li= msg

  = f.date_field :init_date, label: 'Data inicial'#,  as: :date_picker
  = f.date_field :final_date, label: 'Data final'#, as: :date_picker
  = f.number_field :number, label: 'Numero do periodo'
  /= f.submit 'Criar'
  %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Salvar
  %br
      
:javascript
  $(function() {
    $('.datepicker').datetimepicker({
      language: 'pt-BR'
      showMeridian: true
    });
  });
