#EditPeriodModalForm.modal.fade{:role => "dialog"}
  .modal-dialog
    / Modal content
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
        %h4.modal-title Adicionar periodo
      .modal-body
        = bootstrap_form_for @period do |f|
          .container-fluid
            .row
              .col-xs-6
                = f.date_field :init_date, label: 'Data inicial', required: true#,  as: :date_picker
              .col-xs-6
                = f.date_field :final_date, label: 'Data final', required:true#, as: :date_picker
            = f.number_field :number, in: 1..20, label: 'Numero do periodo', required: true
            %button.btn.btn-primary{:type => "submit"} Salvar
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Fechar
      /.modal-footer

#SubjectModalForm.modal.fade{:role => "dialog"}
  .modal-dialog
    / Modal content
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
        %h4.modal-title Adicionar disciplina
      .modal-body
        = bootstrap_form_for [@current_period, @current_period.subjects.new] do |f|
          = f.text_field :name, label: 'Nome', required: true
          %button.btn.btn-primary{:type => "submit"} Salvar
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Fechar
      /.modal-footer
