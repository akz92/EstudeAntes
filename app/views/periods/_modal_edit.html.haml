#EditPeriodModalForm.modal.fade{:role => "dialog"}
  .modal-dialog
    / Modal content
    .modal-content
      = bootstrap_form_for period do |f|
        .modal-header
          %button.close{"data-dismiss" => "modal", :type => "button"}
          %h4.modal-title Adicionar periodo
        .modal-body
          .container-fluid
            .row
              .col-xs-6
                = f.date_field :start_date, label: 'Data inicial', required: true#,  as: :date_picker
              .col-xs-6
                = f.date_field :end_date, label: 'Data final', required:true#, as: :date_picker
            = f.number_field :number, in: 1..20, label: 'Numero do periodo', required: true
        .modal-footer
          %button.btn.btn-primary{:type => "submit"} Salvar
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Fechar
