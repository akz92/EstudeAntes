.col-xs-12.col-md-6
  %table.table.table-striped
    %thead.grey
      %tr
        %th= "Disciplinas"
        %th= "Notas"
    %tbody
      %tr
      - period.subjects.each do |subject|
        %tr
          %td= link_to subject.name, period_subject_path(period, subject)
          %td= "#{number_with_precision(subject.grade, strip_insignificant_zeros: true)} / #{subject.value}"

.col-xs-12.col-md-6.pull-right
  %h5
  /%canvas#canvas
  .box-chart
    %canvas#canvas{:style => "width:100%;"}
