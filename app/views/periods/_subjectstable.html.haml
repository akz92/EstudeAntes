.col-xs-12.col-md-5
  %table.table.table-striped
    %thead.grey
      %tr
        %th= "Disciplinas"
        %th= "Notas"
    %tbody
      %tr
      - @period.subjects.each do |subject|
        %tr
          %td= link_to subject.name, period_subject_path(@period, subject)
          %td= "#{trim(subject.grade)} / #{subject.value}"

