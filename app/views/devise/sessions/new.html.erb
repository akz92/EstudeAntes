<h4>Fazer login para continuar</h4>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, placeholder: 'Email', :required => false, :autofocus => true %>
    <%= f.input :password, placeholder: 'Senha', :required => false %>
    <%= f.input :remember_me, label: 'Continuar Conectado', :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
