= render 'devise/registrations/modal'
.container-fluid
  .row.row-centered
    .col-xs-12.col-lg-4.col-centered
      .login
        = render "devise/shared/facebook"
        %h4 Ou faca login para continuar
        = bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = f.email_field :email, placeholder: 'Email', hide_label: true, :required => true, :autofocus => true, :input_html => {:style => 'width: 300px'}
          = f.password_field :password, placeholder: 'Senha', hide_label: true, :required => true
          = f.check_box :remember_me, label: 'Continuar Conectado', :as => :boolean if devise_mapping.rememberable?
          = f.invisible_captcha :subtitle
          %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Entrar
        = render "devise/shared/links"
      .centertext
        %br
        /= link_to 'Crie uma conta', new_user_registration_path
        %a{href: "#", "data-target" => "#SignUpModalForm", "data-toggle" => "modal"} Crie uma conta
        /%button.btn{"data-target" => "#SignUpModalForm", "data-toggle" => "modal", :type => "button"} Crie uma conta
