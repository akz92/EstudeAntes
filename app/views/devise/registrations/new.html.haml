.container-fluid
  .row
    .col-xs-4
    .col-xs-4
      %h3 Crie uma conta
      = bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = f.email_field :email, label: 'Email', :required => true, :autofocus => true
        = f.password_field :password, label: 'Senha', :required => true
        = f.password_field :password_confirmation, label: 'Confirme a senha', :required => true
        /= f.submit "Criar conta"
        %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Criar conta
        %br
        = link_to 'Cancelar', root_path, class: 'btn btn-lg btn-block btn-warning'
      /= render "devise/shared/links"
