- unless tests.empty?
  .col-xs-12.col-md-3
    %table.table.table-striped
      %thead.flatable
        %tr
          - if tests.first.is_project
            %th Trabalhos
          - else
            %th Provas
      %tbody
        - tests.each do |test|
          = render partial: 'tests/modal_edit', locals: { subject: subject, test: test }
          %tr.accordion-toggle{'data-target' => "##{test.id}", 'data-toggle' => 'collapse'}
            %td.inline
              - if test.date > Date.today && !test.note.empty?
                %a#popoverData.btn{"data-toggle" => "popover", "data-content" => "Popover with data-trigger", "data-html" => "true", "data-original-title" => "#{test.date.strftime('%d de %B, %Y')}", "data-content" => "Valor: #{test.value} <br> Materia: #{test.note}", "data-placement" => "bottom", :href => "#", :rel => "popover"} #{test.date.strftime('%d de %B, %Y')}
              - elsif test.date < Date.today && !test.note.empty?
                %a#popoverData.btn{"data-content" => "Popover with data-trigger", "data-html" => "true", "data-original-title" => "#{test.date.strftime('%d de %B, %Y')}", "data-content" => "Valor: #{test.value} <br> Nota: #{number_with_precision(test.grade, strip_insignificant_zeros: true)}<br> Materia: #{test.note}", "data-placement" => "bottom", "data-trigger" => "focus", :href => "#", :rel => "popover"} #{test.date.strftime('%d de %B, %Y')}
              - else
                %a#popoverData.btn{"data-content" => "Popover with data-trigger", "data-html" => "true", "data-original-title" => "#{test.date.strftime('%d de %B, %Y')}", "data-content" => "Valor: #{test.value} <br> Nota: #{number_with_precision(test.grade, strip_insignificant_zeros: true)}", "data-placement" => "bottom", "data-trigger" => "focus", :href => "#", :rel => "popover"} #{test.date.strftime('%d de %B, %Y')}
              .dropdown.inline
                %a.fa.fa-pencil-square-o.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                %ul.dropdown-menu
                  %li
                    %a{href: "#", "data-target" => "##{dom_id(test)}", "data-toggle" => "modal"} Editar
                  %li.divider
                  %li= link_to 'Deletar', subject_test_path(subject, test), method: :delete, data: { confirm: 'Tem certeza que deseja deletar a prova?' }
              /%a.fa.fa-pencil-square-o{href: "#", "data-target" => "##{dom_id(test)}", "data-toggle" => "modal"}
