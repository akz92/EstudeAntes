#TestModalForm.modal.fade{:role => "dialog"}
  .modal-dialog
    / Modal content
    .modal-content
      = bootstrap_form_for [subject, Test.new] do |f|
        .modal-header
          %button.close{"data-dismiss" => "modal", :type => "button"}
          %h4.modal-title Adicionar prova
        .modal-body
          .container-fluid
            = f.datetime_local_field :date, label: 'Data'
            .row
              .col-xs-6
                = f.number_field :value, label: 'Valor'
              .col-xs-6
                = f.number_field :grade, label: 'Minha nota', :step => 0.1
            = f.text_field :note, label: 'Detalhes'
        .modal-footer
          %button.btn.btn-primary{:type => "submit"} Salvar
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Fechar

