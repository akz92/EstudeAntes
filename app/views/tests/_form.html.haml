= form_for([@period, @subject, @test]) do |f|
  - if @test.errors.any?
    #error_explanation
      %h2= "#{pluralize(@test.errors.count, "error")} prohibited this test from being saved:"
      %ul
        - @test.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :grade
    = f.number_field :grade
  .field
    = f.label :note
    = f.text_field :note
  .actions
    = f.submit 'Save'
